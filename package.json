{
  "name": "copy-this-note",
  "version": "0.8.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prebuild": "npm run lint && npm run typecheck",
    "build": "node esbuild.config.mjs production",
    "prebuild:debug": "npm run lint && npm run typecheck",
    "build:debug": "node esbuild.config.mjs",
    "dev": "node esbuild.config.mjs --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "verify:release": "node scripts/verify-release.mjs",
    "release:check": "npm run verify:release && npm run build",
    "check": "npm run lint && npm run typecheck"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@eslint/json": "0.14.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.30.1",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "obsidian": "1.8.7",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.53.0"
  }
}
